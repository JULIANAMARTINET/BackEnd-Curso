<div>
  <div >
    <div >
      <div>
        <form action="{{url}}" method="{{metodo}}">
          <div >
            <label for="title">Titulo:</label>
            <input
              type="text"
              name="title"
              placeholder="Escribi un titulo"
              class="form-control"
              value="{{producto.title}}"
              autofocus
            />
          </div>
          <div>
            <label for="description">Descripcion:</label>
            <textarea
              name="description"
              class="form-control"
              placeholder="Escribi una descripcion"
              rows="3"
            >{{producto.description}}</textarea>
          </div>
          <button type="submit">
          {{botonName}}
          </button>
        </form>
      </div>
    </div>
  </div>
</div>